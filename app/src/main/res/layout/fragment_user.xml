<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UserFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="20dp"
                android:background="#EBEBEB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#3EDEF1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/login_judge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="未登录"
                        android:textColor="#FFF"
                        android:textSize="24sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:id="@+id/te_user_frg_username"
                        android:text="未登录"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:id="@+id/te_user_frg_sex"
                        android:text="男/女"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="#EBEBEB"
                android:layout_margin="20dp"
                android:clickable="true"
                android:id="@+id/user_like"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/like"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户喜好"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:background="#EBEBEB"
                android:layout_margin="20dp"
                android:clickable="true"
                android:id="@+id/user_history"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/history"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="阅读历史"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:background="#EBEBEB"

                android:id="@+id/user_question"
                android:clickable="true"
                android:layout_margin="20dp"

                android:layout_width="match_parent"
                android:layout_height="55dp">
                <ImageView
                    android:layout_marginLeft="30dp"

                    android:layout_gravity="center"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/question"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="论坛提问"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:background="#EBEBEB"
                android:layout_margin="20dp"
                android:clickable="true"
                android:id="@+id/user_version"

                android:layout_width="match_parent"
                android:layout_height="55dp"
                >
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/version"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="版本信息"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#48E9F8"
            android:layout_margin="20dp"
            android:text="登录"
            android:id="@+id/user_login"
            android:textSize="30sp" />

    </LinearLayout>

</FrameLayout>